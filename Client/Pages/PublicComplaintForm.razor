                           Label="تاریخ خرید" 
                           Editable="true" 
                           Variant="Variant.Outlined" 
                           Margin="Margin.Dense"
                           Culture="faCulture"
                           DateFormat="yyyy/MM/dd" />
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="model.BatchNumber" Label="شماره سری ساخت (بچ نامبر)" Variant="Variant.Outlined" Margin="Margin.Dense" />
        </MudItem>
