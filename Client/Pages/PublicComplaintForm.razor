                {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                        <MudText Class="ms-2">در حال ارسال...</MudText>
                }
                else
                {
                        <MudText>ثبت شکایت</MudText>
                }
            </MudButton>
        </MudItem>
    </MudGrid>
