        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudTextField @bind-Value="model.OtherDairyProductName" Label="نام محصول (سایر لبنیات)" Variant="Variant.Outlined" Margin="Margin.Dense" />
        </MudItem>
         <MudItem xs="12" sm="6" md="4">
